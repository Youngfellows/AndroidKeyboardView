<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_query"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hijamoya.keyboardview.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/default_keyboard_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:keyBackground="@drawable/key_bg"
        app:keyPreviewHeight="@dimen/default_keyPreviewHeight"
        app:keyPreviewLayout="@layout/view_keyboard_preview"
        app:keyTextColor="@color/default_keyTextColor"
        app:keyTextSize="@dimen/default_keyTextSize"
        app:labelTextSize="@dimen/default_labelTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shadowColor="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>